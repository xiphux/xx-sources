--- /dev/null	2003-09-15 06:40:47.000000000 -0700
+++ 25-akpm/include/linux/dwarf2-lang.h	2004-06-28 00:47:19.362170736 -0700
@@ -0,0 +1,132 @@
+#ifndef DWARF2_LANG
+#define DWARF2_LANG
+#include <linux/dwarf2.h>
+
+/*
